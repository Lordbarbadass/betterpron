doctype html
html
  head
    meta(charset='utf-8')
    link(rel="stylesheet", href="css/styles.css")
  body
    #container
      input(
        placeholder="https://e-hentai.org/g/.../.../",
        v-model="url",
        autofocus=true,
        :class="{ invalid:!isUrlValid }",
        :disabled="isLoading"
      )
      img(v-show="isLoading",src="img/loading.svg")
      img(v-for="img in curPage",:src="img")
      nav(v-show="images.length > 50")
        button(@click="movePage(-1)") &lt;
        button(@click="movePage(1)") &gt;
    script(src="js/vue.js")
    script(src="js/script.js")